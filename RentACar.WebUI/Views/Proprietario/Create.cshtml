@model RentACar.Application.DTOs.ProprietarioDTO

@{
    ViewData["Title"] = "Cadastrar novo proprietario";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-horizontal">
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-row">
        <div class="form-group col-md-3">
            <label asp-for="Documento" class="control-label">CPF</label>
            <input asp-for="Documento" class="form-control"/>
            <span asp-validation-for="Documento" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label for="Nome">Nome</label>
            <input asp-for="Nome" class="form-control" aria-label="Nome" aria-describedby="Nome" />
        </div>
        <div class="form-group col-md-5">
            <label for="Email">Email</label>
            <input asp-for="Email" class="form-control" aria-label="Email" aria-describedby="Email" />
        </div>
    </div>

    <div class=form-row>
        <div class="form-group col-md-2">
            <label for="Cep">Cep</label>
            <input asp-for="Endereco.Cep" class="form-control" aria-label="Cep" aria-describedby="Cep" />
        </div>
        <div class="form-group col-md-2">
            <label for="Uf">Uf</label>
            <input asp-for="Endereco.Uf" class="form-control" aria-label="Uf" aria-describedby="Uf" />
        </div>
        <div class="form-group col-md-4">
            <label for="Cidade">Cidade</label>
            <input asp-for="Endereco.Cidade" class="form-control" aria-label="Cidade" aria-describedby="Cidade" />
        </div>
        <div class="form-group col-md-4">
            <label for="Bairro">Bairro</label>
            <input asp-for="Endereco.Bairro" class="form-control" aria-label="Bairro" aria-describedby="Bairro" />
        </div>
    </div>

    <div class=form-row>
        <div class="form-group col-md-4">
            <label for="Rua">Rua</label>
            <input asp-for="Endereco.Rua" class="form-control" aria-label="Rua" aria-describedby="Rua" />
        </div>
        <div class="form-group col-md-2">
            <label for="Numero">Número</label>
            <input asp-for="Endereco.Numero" class="form-control" aria-label="Numero" aria-describedby="Numero" />
        </div>
        <div class="form-group col-md-6">
            <label for="Complemento">Complemento</label>
            <input asp-for="Endereco.Complemento" class="form-control" aria-label="Complemento" aria-describedby="Complemento" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-success" />
            <a asp-action="Index" class="btn btn-info">Voltar a listagem</a>
        </div>
    </div>
    </div>
</form>