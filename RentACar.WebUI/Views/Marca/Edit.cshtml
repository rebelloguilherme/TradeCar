@model RentACar.Application.DTOs.MarcaDTO

@{
    var cancelado = Domain.Entities.StatusCadastro.Cancelado;
    var ativo = Domain.Entities.StatusCadastro.Ativo;
}

<h3>Editar Marca</h3>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div class="form-group">
                <div>
                    <input asp-for="Nome" class="form-control" readonly="true" />
                </div>
                <div>
                    <label asp-for="Status" class="control-label"></label>
                    <select asp-for="Status">
                        <option value="@ativo">Ativo</option>
                        <option value="@cancelado">Cancelado</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Voltar a listagem</a>
</div>
